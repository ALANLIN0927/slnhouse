@model IEnumerable<prjhouse.Models.Product>

@{
    ViewData["Title"] = "cartview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>cartview</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                購物順序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseAddressArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseAddressCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HousePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Housephoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            decimal?total =0;
            int count = 0;
            foreach (var item in Model) {
                count++;
                total +=item.HousePrice;
            <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseAddressArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseAddressCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HousePrice)元
            </td>
            <td>
               <img class="showphoto" style="width:60px;height:60px;" src='~/images/@item.Housephoto' />
            </td>
            <td>
               
                @Html.ActionLink("Delete", "Delete", new {  id=item.Fid })
            </td>
        </tr>
    }}
    <div>
            <p>總價:@total  </p>
    </div>
    </tbody>
</table>
